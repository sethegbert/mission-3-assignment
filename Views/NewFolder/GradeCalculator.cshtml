@{
    ViewData["Title"] = "Grade Calculator";
}

@model GradeCalculatorModel;  

<h2>Grade Calculator</h2>
<form method="post">
    <label>Assignments:</label>
    <input id="assignments" asp-for="assignments" /><br />
    <label>Group Project:</label>
    <input id="groupprojects" asp-for="groupprojects"/><br />
    <label>Quizzes:</label>
    <input id="quizzes" asp-for="quizzes"/><br />
    <label>Exams:</label>
    <input id="exams" asp-for="exams"/><br />
    <label>INTEX:</label>
    <input id="intex" asp-for="intex"/><br />
    <input id="btnsubmit" type="submit" value="Calculate Grade" />

    <div asp-validation-summary="All"></div>
</form>

@*<script src="~/js/GradeCalculator.js"></script>*@
<script src="~/lib/jquery/jquery-3.6.0.min.js"></script>
<script src="~/js/GradeCalculator.js"></script>